<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:WalletWasabi.Fluent.Views.Settings"
             xmlns:settings="using:WalletWasabi.Fluent.ViewModels.Settings"
             xmlns:conv="using:WalletWasabi.Fluent.Converters"
             xmlns:lang="using:WalletWasabi.Lang"
             mc:Ignorable="d" d:DesignWidth="428" d:DesignHeight="371"
             x:DataType="settings:SettingsPageViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Settings.SettingsPageView">

  <ContentArea Title="{Binding Title}"
                 Caption="{x:Static lang:Resources.SettingsPageView_Caption}"
                 EnableNext="True"
                 NextContent="{x:Static lang:Resources.Words_Done}"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <DockPanel LastChildFill="True">

      <InfoMessage Foreground="{DynamicResource WarningMessageForeground}"
                     Margin="0,16,0,0"
                     HorizontalAlignment="Center"
                     Opacity="{Binding IsModified, Converter={x:Static conv:BoolOpacityConverters.BoolToOpacity}}"
                     DockPanel.Dock="Bottom">
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="{x:Static lang:Resources.SettingsPageView_Restart_Wasabi_Text}" />
          <Button Content="{x:Static lang:Resources.SettingsPageView_Restart_Wasabi_Button_Text}" Classes="activeHyperLink plain" Margin="5 0 0 0" Command="{Binding RestartCommand}" />
        </StackPanel>
      </InfoMessage>
      <InfoMessage Foreground="{StaticResource WarningMessageForeground}"
                     Margin="0,16,0,0"
                     HorizontalAlignment="Center"
                     IsVisible="{Binding IsReadOnly}"
                     DockPanel.Dock="Bottom">
        <TextBlock Text="{x:Static lang:Resources.SettingsPageView_Modifying_Not_Possible_Text}" />
      </InfoMessage>

      <TabControl SelectedIndex="{Binding SelectedTab, Mode=TwoWay}"
                  Classes="Settings">
        <TabItem Header="{x:Static lang:Resources.Words_General}">
          <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <v:GeneralSettingsTabView DataContext="{Binding GeneralSettingsTab}" IsEnabled="{Binding !IsReadOnly}" />
          </ScrollViewer>
        </TabItem>

        <TabItem Header="{x:Static lang:Resources.Words_Bitcoin}">
          <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <v:BitcoinTabSettingsView DataContext="{Binding BitcoinTabSettings}" IsEnabled="{Binding !IsReadOnly}" />
          </ScrollViewer>
        </TabItem>

        <TabItem Header="{x:Static lang:Resources.Words_Coordinator}">
          <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <v:CoordinatorTabSettingsView DataContext="{Binding CoordinatorTabSettings}" IsEnabled="{Binding !IsReadOnly}" />
          </ScrollViewer>
        </TabItem>

        <TabItem Header="{x:Static lang:Resources.Words_Advanced}">
          <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <v:AdvancedSettingsTabView DataContext="{Binding AdvancedSettingsTab}" IsEnabled="{Binding !IsReadOnly}" />
          </ScrollViewer>
        </TabItem>

      </TabControl>
    </DockPanel>
  </ContentArea>
</UserControl>

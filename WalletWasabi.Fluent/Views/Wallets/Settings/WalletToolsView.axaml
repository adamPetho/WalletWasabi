<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="using:WalletWasabi.Lang"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:WalletWasabi.Fluent.ViewModels.Wallets.Settings"
             x:DataType="vm:WalletSettingsViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Wallets.Settings.WalletToolsView">

  <StackPanel Spacing="20">
    <TextBlock Classes="h6" Text="{x:Static lang:Resources.WalletToolsView_FirstText}" />
    <InfoMessage>
      <DockPanel>
        <Button Margin="50 0" Theme="{StaticResource AccentButton}" Command="{Binding VerifyRecoveryWordsCommand}" Content="Verify Recovery Words" DockPanel.Dock="Right" />
        <TextBlock Text="{x:Static lang:Resources.WalletToolsView_SecondText}" />
      </DockPanel>
    </InfoMessage>
    <InfoMessage>
      <DockPanel>
        <TextBlock Text="{x:Static lang:Resources.WalletToolsView_ThirdText}" />
      </DockPanel>
    </InfoMessage>
  </StackPanel>
</UserControl>

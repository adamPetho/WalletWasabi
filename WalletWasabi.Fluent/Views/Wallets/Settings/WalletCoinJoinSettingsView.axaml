<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:WalletWasabi.Fluent.ViewModels.Wallets.Settings"
             xmlns:wallets1="clr-namespace:WalletWasabi.Fluent.Models.Wallets"
             xmlns:lang="using:WalletWasabi.Lang"
             x:DataType="vm:WalletCoinJoinSettingsViewModel"
             x:Class="WalletWasabi.Fluent.Views.Wallets.Settings.WalletCoinJoinSettingsView"
             x:CompileBindings="True">

  <StackPanel Classes="settingsLayout">

    <DockPanel>
      <TextBlock Text="{x:Static lang:Resources.WalletCoinJoinSettingsView_AutomaticallyStartCoinjoinText}" />
      <ToggleSwitch IsChecked="{Binding AutoCoinJoin, Mode=OneWay}" Command="{Binding SetAutoCoinJoin}" />
    </DockPanel>

    <DockPanel>
      <TextBlock Text="{x:Static lang:Resources.WalletCoinJoinSettingsView_CoinjoinStrategyText}" VerticalAlignment="Center" DockPanel.Dock="Left" Margin="0" />
      <Button Theme="{StaticResource AccentButton}" Content="Change" Command="{Binding SelectCoinjoinProfileCommand}" DockPanel.Dock="Right" />
      <TextBlock Text="{Binding SelectedCoinjoinProfileName}" VerticalAlignment="Center" MinWidth="120" Margin="10 3 10 0" />
    </DockPanel>

    <DockPanel>
      <TextBlock Text="{x:Static lang:Resources.WalletCoinJoinSettingsView_CoinjoinToThisWalletText}" />
      <ComboBox ItemsSource="{Binding Wallets}" IsEnabled="{Binding IsOutputWalletSelectionEnabled}"
                SelectedItem="{Binding SelectedOutputWallet}">
        <ComboBox.ItemTemplate>
          <DataTemplate x:DataType="wallets1:IWalletModel">
            <TextBlock Text="{Binding Name}" />
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
      <PathIcon DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0 2 7 0" Data="{StaticResource warning_regular}"
                Foreground="{DynamicResource WarningMessageForeground}" Height="17">
        <ToolTip.Tip>
          <TextBlock>
            {x:Static lang:Resources.WalletCoinJoinSettingsView_CoinjoinToThisWalletText_ToolTip_FirstLine}<LineBreak />
            {x:Static lang:Resources.WalletCoinJoinSettingsView_CoinjoinToThisWalletText_ToolTip_SecondLine}<LineBreak />
            {x:Static lang:Resources.WalletCoinJoinSettingsView_CoinjoinToThisWalletText_ToolTip_ThirdLine}
          </TextBlock>
        </ToolTip.Tip>
      </PathIcon>
    </DockPanel>

    <DockPanel ToolTip.Tip="{x:Static lang:Resources.WalletCoinJoinSettingsView_StopCoinjoinThresholdText_ToolTip}">
      <TextBlock Text="{x:Static lang:Resources.WalletCoinJoinSettingsView_StopCoinjoinThresholdText}" />
      <CurrencyEntryBox Classes="standalone" Text="{Binding PlebStopThreshold}" CurrencyCode="BTC" />
    </DockPanel>

  </StackPanel>
</UserControl>
